%header{ :class => 'navbar navbar-default navbar-fixed-top0 navbar-inverse round-bottom-corners dark-grey', :role => 'navigation' }
  .container-fluid
    .navbar-header
      = link_to t('title'), home_path, id: "logo", class: 'navbar-brand'
    .nav.navbar-nav.navbar-right
      %ul{ :class => 'nav navbar-nav' }
        -if signed_in?
          %li= link_to t('header.debtors_list'), debtors_path
          %li= link_to t('header.invoices'), debts_path
          %li= link_to t('header.new_debtor'), new_debtor_path
          %li= link_to t('header.serch_debtor'), search_path
          %li= link_to t('header.log_out'), destroy_user_session_path, method: "delete"
          %li.dropdown
            %a{:href => '#', :class => 'dropdown-toggle', :'data-toggle' => 'dropdown' }
              = t('header.user')
              %b.caret
            %ul.dropdown-menu
              %li= link_to "#{@user.email if @user}", '#'
              %li.divider
              %li= link_to t('header.update_info'), edit_user_registration_path(current_user)
              %li.divider
              %li= link_to t('header.log_out'), destroy_user_session_path, method: "delete"
        -else
          %li= link_to t('header.login'), new_user_session_path 
 